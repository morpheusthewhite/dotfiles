# CUDA set up
export CUDA_PATH="/opt/cuda-10.0"

export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$CUDA_PATH/lib64:$CUDA_PATH/lib"
export PATH="$PATH:$CUDA_PATH/bin:$CUDA_PATH/NsightCompute-1.0"

# gem set up
export PATH="$PATH:/home/francesco/.gem/ruby/2.6.0/bin"

export VISUAL=vim
export EDITOR="$VISUAL"

#alias oracledb-start='docker run -d -p 49160:22 -p 49161:1521 wnameless/oracle-xe-11g'

alias enable_fn='echo 0 | sudo tee /sys/module/hid_apple/parameters/fnmode > /dev/null'

# ssh to WEEEOpen lab Raspberry
alias sshpirla="ssh alarm@lab.weeeopen.it -p 2269"
# local when /inlab
alias sshpirlal="ssh alarm@pi-rla.lab.weeeopen.it"

alias diff="diff --color"
alias docker-start-uml="docker run -d -p 8080:8080 plantuml/plantuml-server:jetty"

alias ddd161="ddd --debugger mips-harvard-os161-gdb kernel"

alias xcolors='msgcat --color=test'

alias z="vim ~/.zsh_profile"
alias h="history | grep"
alias p="ps aux | grep"

alias xt="tar xfv"
alias xzp="unzip"

alias vim="nvim"

# functions and other funny things

mktestenv(){
    temp_dir=$(mktemp -d)
    
    until [ -z "$1" ]
    do
        cp "$1" "${temp_dir}"
        shift
    done
    
    cd "${temp_dir}"
}

